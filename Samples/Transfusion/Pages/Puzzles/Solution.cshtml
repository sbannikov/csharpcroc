@page
@model Transfusion.SolutionModel

@{
    ViewData["Title"] = "Solution";
}

<h1>Solution</h1>

<div>
    <h4>Puzzle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Puzzle.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Puzzle.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>

<table class="table">
    <tbody>
        @foreach (var row in Model.Matrix)
        {
            <tr>
                @foreach (var col in row)
                {
                    <td>
                        @col
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
