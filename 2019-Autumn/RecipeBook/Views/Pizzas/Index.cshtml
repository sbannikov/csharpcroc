@model IEnumerable<RecipeBook.Storage.Pizza>

@{
    ViewBag.Title = "Список рецептов";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Создать", "Create",null, new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Diameter)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mass)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Diameter)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mass)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Html.ActionLink("Правка", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Сведения", "Details", new { id=item.ID }) |
            @Html.ActionLink("Удаление", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
